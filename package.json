{
  "name": "reparo",
  "version": "1.0.0",
  "description": "Repository maintainer",
  "main": "index.js",
  "scripts": {
    "start": "forever -o out.log index.js",
    "pretest": "npm run lint && gulp build",
    "test": "npm run nyc",
    "lint": "eslint index.js lib",
    "nyc": "nyc --all npm run ava",
    "ava": "NODE_CONFIG_DIR=../config ava | tap-diff",
    "ava:watch": "ava --watch | tap-diff",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "gulp"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Snugug/reparo.git"
  },
  "author": "Sam Richard <sam@snug.ug>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Snugug/reparo/issues"
  },
  "homepage": "https://github.com/Snugug/reparo#readme",
  "dependencies": {
    "bluebird": "^3.4.1",
    "color": "^0.11.3",
    "config": "^1.21.0",
    "crypto": "0.0.3",
    "events": "^1.1.1",
    "express": "^4.14.0",
    "express-session": "^1.14.0",
    "forever": "^0.15.2",
    "github": "^2.4.0",
    "http2": "^3.3.4",
    "ibm-design-colors": "^1.6.0",
    "lodash": "^4.14.1",
    "nunjucks": "^2.4.2",
    "request": "^2.74.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "chalk": "^1.1.3",
    "coveralls": "^2.11.12",
    "eslint": "^3.2.2",
    "eslint-config-punchcard": "^1.0.1",
    "eslint-config-xo-space": "^0.14.0",
    "ghooks": "^1.3.2",
    "gulp": "^3.9.1",
    "gulp-forever-monitor": "0.0.3",
    "nodemon": "^1.10.0",
    "nyc": "^7.1.0",
    "punchcard-commit-msg": "^1.0.0",
    "punchcard-runner": "^2.1.2",
    "punchcard-semantic-release": "^2.0.1",
    "sass-toolkit": "^2.10.0",
    "semantic-release": "^4.3.5",
    "supertest": "^2.0.0",
    "tap-diff": "^0.1.1"
  },
  "engines": {
    "node": "^6.2",
    "npm": "^3.9"
  },
  "nyc": {
    "exclude": [
      "tests/**/*",
      "tasks/**/*",
      "config/**/*",
      "Gulpfile.js"
    ]
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "failFast": true,
    "tap": true
  },
  "config": {
    "ghooks": {
      "commit-msg": "punchcard-commit-msg"
    }
  }
}
