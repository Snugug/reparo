{
  "name": "reparo",
  "version": "1.0.0",
  "description": "Repository maintainer",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "test": "npm run nyc",
    "nyc": "nyc --all npm run ava",
    "ava": "NODE_CONFIG_DIR=../config ava | tap-diff",
    "ava:watch": "ava --watch | tap-diff",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Snugug/reparo.git"
  },
  "author": "Sam Richard <sam@snug.ug>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Snugug/reparo/issues"
  },
  "homepage": "https://github.com/Snugug/reparo#readme",
  "dependencies": {
    "color": "^0.11.1",
    "config": "^1.20.1",
    "crypto": "0.0.3",
    "events": "^1.1.0",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "github": "^0.2.4",
    "http2": "^3.3.4",
    "ibm-design-colors": "^1.5.1",
    "nodemon": "^1.9.2",
    "nunjucks": "^2.4.2",
    "request": "^2.72.0",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "coveralls": "^2.11.9",
    "nyc": "^6.4.0",
    "supertest": "^1.2.0",
    "tap-diff": "^0.1.1"
  },
  "engines": {
    "node": "^5.7",
    "npm": "^3.6"
  },
  "nyc": {
    "exclude": [
      "tests/**/*",
      "tasks/**/*",
      "config/**/*",
      "Gulpfile.js"
    ]
  },
  "ava": {
    "files": [
      "tests/**/*.js"
    ],
    "failFast": true,
    "tap": true
  }
}
